<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/fragment_detail_bar" />

    <com.classic.common.MultipleStatusView
        android:id="@+id/sggjycgrow_detail_status_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/custom_empty_view"
        app:errorView="@layout/custom_error_view"
        app:loadingView="@layout/custom_loading_text"
        app:noNetworkView="@layout/custom_no_network_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_status_white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/d8"
            android:paddingRight="@dimen/d8"
            android:paddingTop="@dimen/d4">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/detail_nsv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d0"
                android:layout_weight="1"
                android:scrollbars="none"
                android:overScrollMode="never"
                tools:ignore="RtlHardcoded">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_main_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff434343"
                        android:textSize="@dimen/d18" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/d10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="来        源"
                                android:textColor="@color/main_text_color"
                                android:textSize="@dimen/d15" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_main_resource"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d10"
                                android:text=""
                                android:textColor="@color/main_status_red"
                                android:textSize="@dimen/d15" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发布时间"
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/d15" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_pu_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d10"
                            android:text=""
                            android:textSize="@dimen/d15" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d16"
                        android:layout_marginTop="@dimen/d10"
                        android:background="#f9eeeeee" />

                    <include layout="@layout/share_item_top" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d20"
                        android:lineSpacingMultiplier="1.4"
                        android:text=""
                        android:textSize="@dimen/d16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginTop="@dimen/d10"
                        android:background="#eeeeee" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.5"
                        android:paddingTop="@dimen/d10"
                        android:text=""
                        android:textSize="@dimen/d16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginTop="@dimen/d10"
                        android:background="#eeeeee" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.5"
                        android:paddingTop="@dimen/d10"
                        android:text=""
                        android:textSize="@dimen/d16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginTop="@dimen/d10"
                        android:background="#eeeeee" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.5"
                        android:paddingTop="@dimen/d10"
                        android:text=""
                        android:textSize="@dimen/d16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginTop="@dimen/d10"
                        android:background="#eeeeee" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.5"
                        android:paddingTop="@dimen/d10"
                        android:text=""
                        android:textSize="@dimen/d16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginTop="@dimen/d10"
                        android:background="#eeeeee" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.5"
                        android:paddingTop="@dimen/d10"
                        android:text=""
                        android:textSize="@dimen/d16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginTop="@dimen/d10"
                        android:background="#eeeeee" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.5"
                        android:paddingTop="@dimen/d10"
                        android:text=""
                        android:textSize="@dimen/d16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginTop="@dimen/d10"
                        android:background="#eeeeee" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.5"
                        android:paddingTop="@dimen/d10"
                        android:text=""
                        android:textSize="@dimen/d16" />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>


        </LinearLayout>
    </com.classic.common.MultipleStatusView>


</LinearLayout>