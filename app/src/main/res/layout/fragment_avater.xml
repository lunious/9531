<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/fragment_main_bar" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/avater_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlDragRate="0.8"
        app:srlEnablePureScrollMode="true"
        app:srlFooterHeight="@dimen/d0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d86"
                android:background="@color/main_status_white"
                android:orientation="horizontal"
                android:paddingRight="@dimen/d12"
                android:paddingStart="@dimen/d12"
                android:paddingTop="@dimen/d10">


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="头        像"
                    android:textSize="@dimen/d16" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user_avatar"
                    android:layout_width="@dimen/d68"
                    android:layout_height="@dimen/d68"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/d4" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d10"
                android:background="@color/main_status_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d52"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/d6"
                    android:paddingStart="@dimen/d12">


                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="昵        称"
                        android:textSize="@dimen/d16" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingRight="@dimen/d2"
                            android:text=""
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/d16" />

                        <ImageView
                            android:layout_width="@dimen/d16"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tv_user_name"
                            android:gravity="center"
                            android:src="@mipmap/nomal_forward" />
                    </RelativeLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d1"
                    android:layout_marginLeft="@dimen/d12"
                    android:layout_marginRight="@dimen/d12"
                    android:background="#f9eeeeee" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d52"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/d6"
                    android:paddingStart="@dimen/d12">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="性        别"
                        android:textSize="@dimen/d16" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_user_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingRight="@dimen/d2"
                            android:text=""
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/d16" />

                        <ImageView
                            android:layout_width="@dimen/d16"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tv_user_sex"
                            android:gravity="center"
                            android:src="@mipmap/nomal_forward" />
                    </RelativeLayout>


                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d10"
                android:background="@color/main_status_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d52"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/d6"
                    android:paddingStart="@dimen/d12">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="认证手机"
                        android:textSize="@dimen/d16" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_user_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingRight="@dimen/d2"
                            android:text=""
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/d16" />

                        <ImageView
                            android:layout_width="@dimen/d16"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tv_user_mobile"
                            android:gravity="center"
                            android:src="@mipmap/nomal_forward" />
                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d1"
                    android:layout_marginLeft="@dimen/d12"
                    android:layout_marginRight="@dimen/d12"
                    android:background="#f9eeeeee" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d52"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/d6"
                    android:paddingStart="@dimen/d12">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="绑定企业"
                        android:textSize="@dimen/d16" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_user_company"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingRight="@dimen/d2"
                            android:text=""
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/d16" />

                        <ImageView
                            android:layout_width="@dimen/d16"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tv_user_company"
                            android:gravity="center"
                            android:src="@mipmap/nomal_forward" />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d52"
                android:layout_marginTop="@dimen/d10"
                android:background="@color/main_status_white"
                android:orientation="horizontal"
                android:paddingRight="@dimen/d6"
                android:paddingStart="@dimen/d12">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="常在地区"
                    android:textSize="@dimen/d16" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_user_area"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingRight="@dimen/d2"
                        android:text=""
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/d16" />

                    <ImageView
                        android:layout_width="@dimen/d16"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tv_user_area"
                        android:gravity="center"
                        android:src="@mipmap/nomal_forward" />
                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/d6"
                    android:layout_marginRight="@dimen/d6"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:background="@color/main_status_white" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="5dp"
                        android:text="温馨提示!"
                        android:textColor="@color/main_theme_color"
                        android:textSize="@dimen/d14" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/d14"
                        android:paddingTop="@dimen/d10"
                        android:text="        通过第三方登录的用户，只有认证手机后才能查看企业信息和绑定企业！"
                        android:textSize="@dimen/d12" />
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>