<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lubanjianye.biaoxuntong.ui.media.ImagePreviewView
        android:id="@+id/iv_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <com.lubanjianye.biaoxuntong.util.Loading
        android:id="@+id/loading"
        android:layout_width="@dimen/d32"
        android:layout_height="@dimen/d32"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/iv_default"
        android:layout_width="@dimen/d72"
        android:layout_height="@dimen/d72"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_preview_split_graph"
        android:visibility="gone" />
</FrameLayout>