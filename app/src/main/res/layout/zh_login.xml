<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d48"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:layout_marginTop="@dimen/d18"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/d16"
            android:layout_height="@dimen/d16"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d4"
            android:src="@mipmap/shoujihao" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_login_username"
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入您的手机号"
            android:maxLines="1"
            android:minLines="1"
            android:paddingLeft="@dimen/d8"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/d16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d4"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:background="#f9eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d48"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:layout_marginTop="@dimen/d2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/d16"
            android:layout_height="@dimen/d16"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d4"
            android:src="@mipmap/mima" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_login_pwd"
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:minLines="1"
            android:paddingLeft="@dimen/d8"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/d16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d4"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:background="#eeeeee" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bt_login_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d38"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:layout_marginTop="@dimen/d20"
        android:background="@drawable/button_selected"
        android:gravity="center"
        android:text="登 陆"
        android:textColor="@color/main_status_white"
        android:textSize="@dimen/d16" />


</LinearLayout>