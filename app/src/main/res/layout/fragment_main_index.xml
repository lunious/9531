<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d220"
        android:background="@mipmap/bg_index">

        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/d8"
            android:layout_marginRight="@dimen/d10"
            android:layout_marginTop="@dimen/d32">


            <ImageView
                android:layout_width="@dimen/d18"
                android:layout_height="@dimen/d18"
                android:paddingLeft="@dimen/d4"
                android:paddingTop="@dimen/d2"
                android:src="@mipmap/location" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="@dimen/d2"
                android:text="四川"
                android:textColor="@color/main_status_white"
                android:textSize="@dimen/s15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bxt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d52"
            android:layout_below="@+id/ll_location"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/d8"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/d44"
                android:layout_height="@dimen/d44"
                android:contentDescription="@null"
                android:src="@mipmap/log" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d4"
                android:layout_marginLeft="@dimen/d6"
                android:layout_marginTop="@dimen/d2"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="鲁班标讯通"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d16" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/main_status_red">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d2"
                        android:layout_marginRight="@dimen/d2"
                        android:text="招投标大数据服务专家"
                        android:textColor="@color/white"
                        android:textSize="@dimen/d12" />

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_search_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_search"
            android:layout_marginBottom="@dimen/d8"
            android:gravity="center">

            <com.flyco.tablayout.CommonTabLayout
                android:id="@+id/search_stl_tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d40"
                tl:tl_iconVisible="false"
                tl:tl_indicator_color="@color/white"
                tl:tl_indicator_height="6dp"
                tl:tl_indicator_style="TRIANGLE"
                tl:tl_indicator_width="14dp"
                tl:tl_tab_padding="@dimen/d12"
                tl:tl_textSelectColor="@color/white"
                tl:tl_textsize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d34"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/d14"
            android:layout_marginLeft="@dimen/d12"
            android:layout_marginRight="@dimen/d12"
            android:background="@drawable/bg_search">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/d12"
                    android:layout_height="@dimen/d12"
                    android:layout_gravity="center"
                    android:src="@mipmap/img_search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:paddingStart="@dimen/d2"
                    android:text="请输入要查询的"
                    android:textColor="#9d9d9d"
                    android:textSize="@dimen/s15" />

                <TextView
                    android:id="@+id/search_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:paddingStart="@dimen/d2"
                    android:text="标讯"
                    android:textColor="#9d9d9d"
                    android:textSize="@dimen/s15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:paddingStart="@dimen/d2"
                    android:text="名"
                    android:textColor="#9d9d9d"
                    android:textSize="@dimen/s15" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40"
        android:background="#FFF6F6F6"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d24"
            android:background="@drawable/bg_oval_radius"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/d14"
                android:layout_height="@dimen/d14"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d6"
                android:scaleType="fitXY"
                android:src="@mipmap/speaker" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d4"
                android:layout_marginRight="@dimen/d4"
                android:gravity="center"
                android:text="行业资讯"
                android:textColor="#6c6c6c"
                android:textSize="@dimen/d14" />


            <com.lubanjianye.biaoxuntong.util.rx.RxTextViewVertical
                android:id="@+id/scroll_view"
                android:layout_width="@dimen/d0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d2"
                android:layout_marginRight="@dimen/d2"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:maxLines="1" />

            <TextView
                android:id="@+id/more_hyzx"
                android:layout_width="@dimen/d0"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/d4"
                android:layout_weight="1"
                android:gravity="center"
                android:text="更多"
                android:textColor="@color/main_theme_color"
                android:textSize="@dimen/d14" />


        </LinearLayout>

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/index_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_status_white" />

</LinearLayout>