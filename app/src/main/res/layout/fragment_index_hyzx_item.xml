<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/d4"
    android:layout_marginRight="@dimen/d4"
    android:layout_marginTop="@dimen/d8"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d6"
        android:layout_marginLeft="@dimen/d6"
        android:layout_marginRight="@dimen/d4"
        android:layout_marginTop="@dimen/d4"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/d0"
            android:layout_height="@dimen/d100"
            android:layout_weight="1.8">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_index_hyzx_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@mipmap/hyzx_1"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingLeft="@dimen/d4">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_index_hyzx_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="工程招投标“打招呼”必登记"
                android:textColor="#ff434343"
                android:textSize="@dimen/d16" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_index_hyzx_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d4"
                    android:text="2017-7-7"
                    android:textColor="#ffa0a0a0"
                    android:textSize="@dimen/d14" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_item_time"
        android:layout_marginTop="@dimen/d8"
        android:layout_marginLeft="@dimen/d6"
        android:background="@color/dark_view" />

</LinearLayout>