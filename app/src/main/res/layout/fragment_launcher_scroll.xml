<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide_pages"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/d18">

        <LinearLayout
            android:id="@+id/ll_guide_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <View
            android:id="@+id/v_guide_redpoint"
            android:layout_width="@dimen/d10"
            android:layout_height="@dimen/d10"
            android:background="@drawable/red_point" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_guide_startexp"
        android:layout_width="@dimen/d180"
        android:layout_height="@dimen/d42"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/d60"
        android:background="@drawable/bg_start_use"
        android:paddingLeft="@dimen/d10"
        android:paddingRight="@dimen/d10"
        android:text="开始体验"
        android:textColor="#ddffffff"
        android:textSize="@dimen/s18"
        android:visibility="gone" />

</RelativeLayout>