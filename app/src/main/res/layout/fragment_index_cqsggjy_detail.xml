<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/fragment_detail_bar" />

    <com.classic.common.MultipleStatusView
        android:id="@+id/index_sggjy_detail_status_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/custom_empty_view"
        app:errorView="@layout/custom_error_view"
        app:loadingView="@layout/custom_loading_text"
        app:noNetworkView="@layout/custom_no_network_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_status_white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/d8"
            android:paddingRight="@dimen/d8"
            android:paddingTop="@dimen/d4">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/detail_nsv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d0"
                android:layout_weight="1"
                android:overScrollMode="never"
                android:scrollbars="none"
                tools:ignore="RtlHardcoded">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_main_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff434343"
                        android:textSize="@dimen/d18" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/d14">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_main_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="成都"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/d15" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/d12">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/d4">

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/tv_dead_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2017-12-12"
                                    android:textSize="@dimen/d15" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d10"
                                    android:text="截止"
                                    android:textColor="@color/main_status_red"
                                    android:textSize="@dimen/d14" />

                            </LinearLayout>

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_gzgg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/bg_rect"
                                android:paddingBottom="@dimen/d2"
                                android:paddingLeft="@dimen/d6"
                                android:paddingRight="@dimen/d6"
                                android:paddingTop="@dimen/d2"
                                android:text="更正公告"
                                android:textColor="@color/main_status_blue"
                                android:textSize="@dimen/d14" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/d12">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/d2">

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/tv_pub_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2017-12-12"
                                    android:textSize="@dimen/d15" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d10"
                                    android:text="发布"
                                    android:textSize="@dimen/d14" />

                            </LinearLayout>

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_jggg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/bg_rect"
                                android:paddingBottom="@dimen/d2"
                                android:paddingLeft="@dimen/d6"
                                android:paddingRight="@dimen/d6"
                                android:paddingTop="@dimen/d2"
                                android:text="结果公告"
                                android:textColor="@color/main_status_blue"
                                android:textSize="@dimen/d14" />

                        </RelativeLayout>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d16"
                        android:layout_marginTop="@dimen/d12"
                        android:background="#88eeeeee" />


                    <include layout="@layout/share_item_top" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_fbt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d12"
                        android:lineSpacingMultiplier="1.2"
                        android:text="副标题"
                        android:textColor="#434343"
                        android:textSize="@dimen/d15" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d20"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textSize="@dimen/d16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@color/view" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d12"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textSize="@dimen/d16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@color/view" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d12"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textSize="@dimen/d16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@color/view" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d12"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textSize="@dimen/d16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@color/view" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d12"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textSize="@dimen/d16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@color/view" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d12"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textSize="@dimen/d16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@color/view" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d12"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textSize="@dimen/d16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@color/view" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/d26"
                        android:layout_marginTop="@dimen/d12"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_yw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="公告原文"
                            android:textColor="@color/main_status_blue"
                            android:textSize="@dimen/d16" />


                    </RelativeLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>
    </com.classic.common.MultipleStatusView>


</LinearLayout>