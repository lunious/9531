<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/main_status_white" />


    <LinearLayout
        android:id="@+id/cv_tab_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d2"
        android:layout_marginTop="@dimen/d60"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginTop="@dimen/d10"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_search_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d4"
                    android:text="热门搜索"
                    android:layout_gravity="center"
                    android:textColor="@color/main_theme_color"
                    android:textSize="@dimen/d16" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/p1"
                android:layout_marginTop="@dimen/d8"
                android:background="#dddddd" />



            <cn.lankton.flowlayout.FlowLayout
                android:id="@+id/flowlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d15"
                android:layout_marginTop="@dimen/d10"
                android:paddingLeft="@dimen/d5"
                android:paddingRight="@dimen/d5"
                app:lineSpacing="@dimen/d10"
                app:maxLine="3" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/p28"
        android:layout_marginTop="@dimen/d8"
        android:background="@color/view" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginTop="@dimen/d20"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d4"
            android:text="历史搜索"
            android:layout_gravity="center"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/d16" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/p1"
        android:layout_marginTop="@dimen/d8"
        android:background="#dddddd" />


    <TextView
        android:id="@+id/tv_no_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/d80"
        android:layout_marginTop="@dimen/d80"
        android:gravity="center_horizontal"
        android:text="暂无搜索记录"
        android:textColor="#c5c5c5"
        android:textSize="@dimen/s15" />
</LinearLayout>
