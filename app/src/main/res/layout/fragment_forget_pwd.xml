<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include layout="@layout/fragment_main_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d48"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:layout_marginTop="@dimen/d30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_new_username"
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的手机号"
            android:inputType="phone"
            android:maxLines="1"
            android:minLines="1"
            android:paddingLeft="@dimen/d4"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/d16" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d4"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:background="#f9eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d48"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d20"
        android:layout_marginTop="@dimen/d14"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_new_code"
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/d16"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="text"
            android:maxLines="1"
            android:minLines="1"
            android:paddingLeft="@dimen/d4"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/d16" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_new_sms_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/d16"
            android:alpha="0.4"
            android:background="@drawable/bg_register_call_sms"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/d6"
            android:paddingLeft="@dimen/d8"
            android:paddingRight="@dimen/d8"
            android:paddingTop="@dimen/d6"
            android:text="获取验证码"
            android:textColorHint="#c9c9c9"
            android:textSize="@dimen/d14"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d4"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:background="#f9eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d48"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:layout_marginTop="@dimen/d16"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_new_pwd"
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/d16"
            android:layout_weight="1"
            android:background="@null"
            android:hint="设置新密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:minLines="1"
            android:paddingLeft="@dimen/d4"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/d16" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d4"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:background="#f9eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d48"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:layout_marginTop="@dimen/d16"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_new_pwd_sure"
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/d16"
            android:layout_weight="1"
            android:background="@null"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:minLines="1"
            android:paddingLeft="@dimen/d4"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/d16" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d4"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:background="#f9eeeeee" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bt_new_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d38"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:layout_marginTop="@dimen/d32"
        android:background="@drawable/button_selected"
        android:gravity="center"
        android:text="点击修改密码"
        android:textColor="@color/main_status_white"
        android:textSize="@dimen/d16" />

</LinearLayout>