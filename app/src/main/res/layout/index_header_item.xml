<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d108"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_zbgg"
                android:layout_width="@dimen/d0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d46"
                    android:layout_height="@dimen/d46"
                    android:src="@mipmap/zbgg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d4"
                    android:text="招标公告"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/s14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_zbgs"
                android:layout_width="@dimen/d0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d46"
                    android:layout_height="@dimen/d46"
                    android:src="@mipmap/zbgs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d4"
                    android:text="中标公示"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/s14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cggg"
                android:layout_width="@dimen/d0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d46"
                    android:layout_height="@dimen/d46"
                    android:src="@mipmap/zfcg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d4"
                    android:text="政府采购"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/s14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_jggg"
                android:layout_width="@dimen/d0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d46"
                    android:layout_height="@dimen/d46"
                    android:src="@mipmap/jggg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d4"
                    android:text="结果公告"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/s14" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d10"
        android:background="#88eeeeee"/>

    <com.youth.banner.Banner
        android:id="@+id/index_item_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d100"
        android:background="@mipmap/default_banner"
        android:visibility="visible"
        app:indicator_drawable_selected="@color/main_theme_color"
        app:indicator_drawable_unselected="@android:color/white"
        app:indicator_height="@dimen/d3"
        app:indicator_margin="@dimen/d6"
        app:indicator_width="@dimen/d3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d10"
        android:background="#88eeeeee"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d36"
        android:layout_marginLeft="@dimen/d6"
        android:layout_marginRight="@dimen/d6"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="最新标讯"
            android:textColor="@color/main_status_blue"
            android:textSize="@dimen/d15" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多" />


            <ImageView
                android:layout_width="@dimen/d16"
                android:layout_height="@dimen/d16"
                android:layout_alignParentRight="true"
                android:src="@mipmap/nomal_forward" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/p1"
        android:background="@color/dark_view" />

</LinearLayout>