<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_status_white"
        android:padding="@dimen/d10">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/d10"
            android:text="取消"
            android:textColor="@color/main_theme_color"
            android:textSize="@dimen/d15" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请选择时间"
            android:textColor="@color/main_theme_color"
            android:textSize="@dimen/d16" />

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/d10"
            android:text="确定"
            android:textColor="@color/main_theme_color"
            android:textSize="@dimen/d15" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#11112233" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d5"
            android:background="@color/main_status_white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/d15"
            android:paddingLeft="@dimen/d20"
            android:paddingRight="@dimen/d20"
            android:paddingTop="@dimen/d15">

            <com.lubanjianye.biaoxuntong.util.datapicker.DatePickerView
                android:id="@+id/year_pv"
                android:layout_width="0dp"
                android:layout_height="@dimen/d160"
                android:layout_weight="3" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="年"
                android:textColor="@color/main_theme_color"
                android:textSize="@dimen/d15" />

            <com.lubanjianye.biaoxuntong.util.datapicker.DatePickerView
                android:id="@+id/month_pv"
                android:layout_width="0dp"
                android:layout_height="@dimen/d160"
                android:layout_weight="2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="月"
                android:textColor="@color/main_theme_color"
                android:textSize="@dimen/d15" />

            <com.lubanjianye.biaoxuntong.util.datapicker.DatePickerView
                android:id="@+id/day_pv"
                android:layout_width="0dp"
                android:layout_height="@dimen/d160"
                android:layout_weight="2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日"
                android:textColor="@color/main_theme_color"
                android:textSize="@dimen/d15" />

            <com.lubanjianye.biaoxuntong.util.datapicker.DatePickerView
                android:id="@+id/hour_pv"
                android:layout_width="0dp"
                android:layout_height="@dimen/d160"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/hour_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="时"
                android:textColor="@color/main_theme_color"
                android:textSize="@dimen/d15" />

            <com.lubanjianye.biaoxuntong.util.datapicker.DatePickerView
                android:id="@+id/minute_pv"
                android:layout_width="0dp"
                android:layout_height="@dimen/d160"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/minute_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="分"
                android:textColor="@color/main_theme_color"
                android:textSize="@dimen/d15" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>