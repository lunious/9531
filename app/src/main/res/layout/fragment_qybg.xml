<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/fragment_main_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d18"
            android:background="#88eeeeee" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d12"
            android:layout_marginTop="@dimen/d14"
            android:text="企业报告-完整版"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/s18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/p1"
            android:layout_marginLeft="@dimen/d12"
            android:layout_marginTop="@dimen/d8"
            android:background="@color/dark_view" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d12"
            android:layout_marginTop="@dimen/d18">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="报告目标"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/tv_bgcompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/d4"
                android:text=""
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/s14" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/p1"
            android:layout_marginLeft="@dimen/d12"
            android:layout_marginTop="@dimen/d8"
            android:background="@color/dark_view" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d12"
            android:layout_marginTop="@dimen/d14">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="接收邮箱"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/s16" />


            <EditText
                android:id="@+id/et_bgemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/d4"
                android:hint="请输入邮箱地址"
                android:background="@null"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/s14" />
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d46"
            android:layout_marginTop="@dimen/d14"
            android:background="#88eeeeee"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d12"
                android:text="报告格式"
                android:textSize="@dimen/s15" />

        </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d18"
                android:layout_marginTop="@dimen/d10"
                android:layout_marginBottom="@dimen/d10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/coin" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d14"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PDF"
                                android:textColor="#000000"
                                android:textSize="@dimen/s15"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥0元"
                                android:textColor="@color/main_status_red"
                                android:textSize="@dimen/s14"/>


                        </LinearLayout>


                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d20"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ok" />
                </RelativeLayout>



            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88eeeeee" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d2"
                android:layout_marginLeft="@dimen/d8"
                android:layout_marginRight="@dimen/d8"
                android:layout_marginTop="@dimen/d52">


                <TextView
                    android:id="@+id/btn_sure_send"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d38"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/button_selected_red"
                    android:gravity="center"
                    android:text="确认发送"
                    android:textColor="@color/main_status_white"
                    android:textSize="@dimen/d16" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>